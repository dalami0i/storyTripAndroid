<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:orientation="vertical"
    android:background="@android:color/transparent">

    <android.support.v7.widget.CardView
        android:id="@+id/edit_top_menu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/tv_edit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:text="개인정보 변경"/>

        <TextView
            android:id="@+id/tv_edit_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:textSize="16sp"
            android:text="확인"/>

        <TextView
            android:id="@+id/tv_edit_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="20dp"
            android:textSize="16sp"
            android:text="취소"/>

    </android.support.v7.widget.CardView>


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img_mypage_profile_pic_ed"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        app:riv_corner_radius="10dp"
        android:layout_below="@+id/edit_top_menu"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_non_profile_pic"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:id="@+id/edit_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/img_mypage_profile_pic_ed"
        android:background="@drawable/round_background_main_search"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_edit_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/pointTextColor"
            android:textSize="17sp"
            android:text="name"/>

        <EditText
            android:id="@+id/edittext_mypage_profile_name_ed"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="8"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:hint="@string/edittext_main_search_hint"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_gravity="end|center_vertical"
            android:textAlignment="viewEnd"
            android:background="@drawable/round_background_mypage_edit"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/edit_age_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/edit_name_layout"
        android:background="@drawable/round_background_main_search"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_edit_age"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/pointTextColor"
            android:textSize="17sp"
            android:text="age"/>

        <EditText
            android:id="@+id/edittext_mypage_profile_age_ed"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="8"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:hint="@string/willbeupdate"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_gravity="end|center_vertical"
            android:textAlignment="viewEnd"
            android:background="@drawable/round_background_mypage_edit"
            android:cursorVisible="false"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/edit_gender_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/edit_age_layout"
        android:background="@drawable/round_background_main_search"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_edit_gender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/pointTextColor"
            android:textSize="17sp"
            android:text="gender"/>

        <EditText
            android:id="@+id/edittext_mypage_profile_gender_ed"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="8"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:hint="@string/willbeupdate"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_gravity="end|center_vertical"
            android:textAlignment="viewEnd"
            android:background="@drawable/round_background_mypage_edit"
            android:cursorVisible="false"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/edit_nationality_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/edit_gender_layout"
        android:background="@drawable/round_background_main_search"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_edit_nationality"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/pointTextColor"
            android:textSize="17sp"
            android:text="country"/>

        <EditText
            android:id="@+id/edittext_mypage_profile_nationality_ed"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="8"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:hint="@string/willbeupdate"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_gravity="end|center_vertical"
            android:textAlignment="viewEnd"
            android:background="@drawable/round_background_mypage_edit"
            android:cursorVisible="false"
            android:maxLength="30"

            />

    </LinearLayout>
</RelativeLayout>